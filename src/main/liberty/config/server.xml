<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">
    <featureManager>
        <feature>servlet-6.0</feature>
        <feature>jsonb-3.0</feature>
        <feature>cdi-4.0</feature>
        <feature>faces-4.0</feature>
        <feature>restfulWS-3.1</feature>
        <feature>persistence-3.1</feature>
        <feature>enterpriseBeans-4.0</feature>
        <feature>appSecurity-5.0</feature>
    </featureManager>

    <application type="war" location="jakarta-lab-app-1.0.war">
        <application-bnd>
            <security-role name="admin">
                <group name="admin" access-id="group:jdbc/Weaponry/admin"/>
                <run-as userid="admin-service"/>
            </security-role>
            <security-role name="player">
                <group name="player" access-id="group:jdbc/Weaponry/player"/>
            </security-role>
        </application-bnd>
    </application>

    <dataSource id="WeaponryDataSource" jndiName="jdbc/Weaponry">
        <jdbcDriver javax.sql.XADataSource="org.h2.jdbcx.JdbcDataSource"
                    javax.sql.ConnectionPoolDataSource="org.h2.jdbcx.JdbcDataSource"
                    javax.sql.DataSource="org.h2.jdbcx.JdbcDataSource"
                    libraryRef="H2JDBCLib"/>
        <properties URL="jdbc:h2:mem:weaponry"/>
        <!--        <properties URL="jdbc:h2:/tmp/weaponry;AUTO_SERVER=TRUE"/>-->
    </dataSource>

    <library id="H2JDBCLib">
        <fileset dir="${wlp.install.dir}/usr/servers/defaultServer/lib/global/" includes="h2-2.2.220.jar"/>
    </library>

    <logging consoleLogLevel="INFO" traceSpecification="*=info">
        <file name="logs/messages.log" maxFileSize="20" maxFiles="5"/>
    </logging>

</server>
